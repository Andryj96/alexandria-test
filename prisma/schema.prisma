generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// models
model Repository {
  id              Int      @id @default(autoincrement())
  guithubId       Int
  name            String
  fullName        String
  description     String?
  language        String
  stargazersCount Int // stars
  htmlUrl         String
  owner           String?
  createdAt       DateTime
  updatedAt       DateTime

  favorites Favorite[]
}

model Favorite {
  id           Int        @id @default(autoincrement())
  datetime     DateTime   @default(now())
  last_ip      String
  favorite     Boolean
  repository   Repository @relation(fields: [repositoryId], references: [id])
  repositoryId Int
}

